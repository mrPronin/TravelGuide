<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ListView android:layout_width="0dp" android:layout_height="fill_parent" android:id="@+id/lvMain1"
              android:layout_weight="2"/>
    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent" android:layout_weight="8">
        <view android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              class="com.region.travelguide.TouchImageView" android:id="@+id/snoopy" android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"/>
    </RelativeLayout>
</LinearLayout>